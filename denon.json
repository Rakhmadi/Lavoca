{
  "$schema": "https://deno.land/x/denon/schema.json",
  "scripts": {
    "start": {
      "cmd": "deno run -A --unstable app.ts",
      "desc": "run my app.ts file",
      "watch": true
    },
    "watcher": {
      "interval": 350,
      "exts": ["js", "jsx", "ts", "tsx", "json"],
      "match": ["*.*"],
      "skip": ["*/.git/*"],
      "legacy": false
    }
  }
}